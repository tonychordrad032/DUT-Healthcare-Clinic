    <EditText
        android:id="@+id/studentNumber"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"

        android:background="@drawable/edt_background"
        android:drawablePadding="10dp"
        android:hint="Student Number"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/studentNumber"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edt_background"
        android:drawablePadding="10dp"
        android:hint="First name"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/firstName"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edt_background"
        android:drawablePadding="10dp"
        android:hint="Last Name"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <EditText
        android:id="@+id/qualificationField"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/lastName"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edt_background"
        android:drawablePadding="10dp"
        android:hint="Qualification"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />


    <EditText
        android:id="@+id/clinicField"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/qualificationField"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edt_background"
        android:drawablePadding="10dp"
        android:hint="Clinic"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        />

    <EditText
        android:id="@+id/appointmentDate"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/clinicField"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edt_background"
        android:drawablePadding="10dp"
        android:hint="Appointment Date"
        android:inputType="date"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        />

    <ImageButton
        android:id="@+id/dateSelector"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_width="47dp"
        android:layout_height="33dp"
        android:layout_alignEnd="@+id/appointmentDate"
        android:layout_alignBottom="@+id/appointmentDate"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="14dp"
        android:background="#FFFFFF"
        app:srcCompat="@drawable/baseline_calendar_month_black_36" />

    <Spinner
        android:id="@+id/appointmentTime"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/appointmentDate"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edt_background"
        android:drawablePadding="10dp"
        android:dropDownWidth="wrap_content"
        android:hint="Appointment Time"
        android:inputType="datetime"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:spinnerMode="dialog" />


    <EditText
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/appointmentTime"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edt_background"
        android:drawablePadding="10dp"
        android:hint="notes.."
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:paddingRight="10dp" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notes"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edt_background"
        android:paddingLeft="20dp"
        android:text="Make Appointment" />



</RelativeLayout>