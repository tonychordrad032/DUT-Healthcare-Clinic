    <TextView
        android:id="@+id/studentNumberView"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:text="Student Number  : "
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/studentNumberTxt"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="85dp"
        android:layout_alignParentRight="true"
        android:textAlignment="textStart"
        android:text="22024191"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/firstNameView"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/studentNumberView"
        android:layout_marginLeft="15dp"
        android:text="First Name  : "
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/firstNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/studentNumberView"
        android:layout_marginRight="85dp"
        android:layout_alignParentRight="true"
        android:textAlignment="textStart"
        android:text="Sanele Tony"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/lastNameView"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/firstNameView"
        android:layout_marginLeft="15dp"
        android:text="Last Name  : "
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/lastNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/firstNameView"
        android:layout_marginRight="85dp"
        android:layout_alignParentRight="true"
        android:text="Nyaba"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/mobileView"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/lastNameView"
        android:layout_marginLeft="15dp"
        android:text="Cellphone Number  : "
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/mobileTxt"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/lastNameView"
        android:layout_marginRight="85dp"
        android:layout_alignParentRight="true"
        android:text="0717865452"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/qualificationView"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/mobileView"
        android:layout_marginLeft="15dp"
        android:text="Qualification  : "
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/qualificationTxt"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/mobileTxt"
        android:layout_marginRight="85dp"
        android:layout_alignParentRight="true"
        android:textAlignment="textStart"
        android:text="Diploma in Accounting"
        android:textSize="18dp"
        />

    <EditText
        android:id="@+id/reason"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/qualificationView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edt_background"
        android:drawablePadding="10dp"
        android:hint="Reason for booking"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:paddingRight="10dp" />



    <EditText
        android:id="@+id/appointmentDate"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/reason"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edt_background"
        android:drawablePadding="10dp"
        android:hint="Appointment Date"
        android:inputType="date"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        />

    <ImageButton
        android:id="@+id/dateSelector"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_width="47dp"
        android:layout_height="33dp"
        android:layout_alignEnd="@+id/appointmentDate"
        android:layout_alignBottom="@+id/appointmentDate"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="14dp"
        android:background="#FFFFFF"
        app:srcCompat="@drawable/baseline_calendar_month_black_36" />

    <Spinner
        android:id="@+id/appointmentTime"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/appointmentDate"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edt_background"
        android:drawablePadding="10dp"
        android:dropDownWidth="wrap_content"
        android:hint="Appointment Time"
        android:inputType="datetime"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:spinnerMode="dialog" />


    <EditText
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/appointmentTime"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edt_background"
        android:drawablePadding="10dp"
        android:hint="notes.."
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:paddingRight="10dp" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notes"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edt_background"
        android:paddingLeft="20dp"
        android:text="Make Appointment" />



</RelativeLayout>