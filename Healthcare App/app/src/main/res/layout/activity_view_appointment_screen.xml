<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAppointmentScreen">

    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:text="Date  : "
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="18dp"
        android:layout_toRightOf="@+id/dateView"
        android:text="20 May 2023, Tuesday"
        android:textAlignment="textStart"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/date_text_view"
        android:layout_marginLeft="15dp"
        android:text="Time  : "
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/date_text_view"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="94dp"
        android:layout_toRightOf="@+id/timeView"
        android:text="09:00 "
        android:textAlignment="textStart"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/reasonView"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/timeView"
        android:layout_marginLeft="15dp"
        android:text="Reason for booking  : "
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/reason_text_view"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/timeView"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/reasonView"
        android:layout_marginTop="1dp"
        android:text="I am sick, i feel like vomiting"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/reason_canceling"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/reasonView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edt_background"
        android:drawablePadding="10dp"
        android:hint="Reason for cancelling..."
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:paddingRight="10dp" />

    <Button
        android:id="@+id/cancel_appointment_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reason_canceling"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/edt_background"
        android:paddingLeft="20dp"
        android:text="Cancel Appointment" />

</RelativeLayout>